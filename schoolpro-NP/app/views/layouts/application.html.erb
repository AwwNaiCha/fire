<!DOCTYPE HTML>
<html>
<head>
  <title>Fire Prediction</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="description" content="" />
  <meta name="keywords" content="" />
  <!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
  <script src="js/jquery.min.js"></script>
  <script src="js/skel.min.js"></script>
  <script src="js/skel-layers.min.js"></script>
  <script src="js/init.js"></script>
  <noscript>
    <link rel="stylesheet" href="css/skel.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/style-xlarge.css" />
  </noscript>
</head>
<body class="landing">

<!-- Banner -->
<section id="banner">
  <h2>Fire Threat Prediction</h2>
  <!--<p>Lorem ipsum dolor sit amet nullam consequat <br /> interdum vivamus donce sed libero.</p>-->
  <nav>
    <ul>
      <li><%= link_to 'HOME', home_path, :class => "button special big" %></li>
      <li><%= link_to 'CONTACT US', contact_us_path, :class => "button special big"%></li>
      <li><%= link_to 'MAP', parkmap_path, :class => "button special big"%></li>
      <% if user_signed_in? %>

          <li><%= link_to 'Edit profile', edit_user_registration_path,:class => "button special big" %></li>
          <li><%= link_to "Logout", destroy_user_session_path,:class => "button special big", method: :delete %></li>
      <% else %>
          <li><%= link_to "Sign up", new_user_registration_path,:class => "button special big" %></li>
          <li><%= link_to "Login", new_user_session_path,:class => "button special big" %></li>
      <% end %>
    </ul>
  </nav>
</section>


<section id="one" class="wrapper">
  <div class="container 75%">

    <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
    <% end %>
    <h2> <%= yield %></h2>
  </div>

</section>



<!-- Footer -->
<footer id="footer">
  <div class="container">
    <ul class="icons">
      <li><a href="#" class="icon fa-facebook-square"></a></li>
